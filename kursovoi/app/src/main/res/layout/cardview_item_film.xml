<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="1dp"
    android:id="@+id/card_films"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<!--240*135-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageViewFilmItem"
        android:layout_width="187dp"
        android:layout_height="334dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_icon" />
    <TextView
        android:id="@+id/ratingTextViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:fontFamily="@font/nunito_sans_bold_italic"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:layout_gravity="bottom"
        android:text="10"
        android:textColor="@color/WhiteApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</FrameLayout>

        <TextView
            android:id="@+id/filmNameTextViewItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Film name"
            android:inputType="textMultiLine"
            android:fontFamily="@font/nunito_sans_bold_italic"
            android:textColor="@color/textColorFragment"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/genreFilmTextViewItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:inputType="textMultiLine"
            android:text="TextView"
            android:textSize="17dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>